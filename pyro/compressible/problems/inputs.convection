# simple inputs files for the four-corner problem.

[driver]
max_steps = 10000
tmax = 10.0


[io]
basename = convection_
n_out = 100000
dt_out = 0.25


[mesh]
nx = 128
ny = 512
xmax = 4.0
ymax = 16.0

xlboundary = periodic
xrboundary = periodic

ylboundary = reflect
yrboundary = ambient


[convection]
scale_height = 2.0
dens_base = 1000.0
dens_cutoff = 1.e-4

e_rate = 0.5


[sponge]
do_sponge = 1

[compressible]
grav = -2.0

limiter = 2
