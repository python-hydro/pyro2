# simple inputs files for the four-corner problem.

[driver]
max_steps = 10000
tmax = 10.0


[io]
basename = convection_
n_out = 100


[mesh]
nx = 128
ny = 384
xmax = 4.0
ymax = 12.0

xlboundary = outflow
xrboundary = outflow

ylboundary = reflect
yrboundary = ambient


[convection]
scale_height = 2.0
dens_base = 1000.0
dens_cutoff = 1.e-3

e_rate = 0.5


[compressible]
grav = -2.0

limiter = 2
