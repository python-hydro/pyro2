# simple inputs files for the four-corner problem.

[driver]
max_steps = 10000
tmax = 10.0


[io]
basename = plume_
n_out = 100


[mesh]
nx = 128
ny = 256
xmax = 4.0
ymax = 8.0

xlboundary = outflow
xrboundary = outflow

ylboundary = hse
yrboundary = hse


[plume]
scale_height = 3.0
dens_base = 1000.0

x_pert = 2.0
y_pert = 2.0
r_pert = 0.25
e_rate = 0.5


[compressible]
grav = -2.0

limiter = 2
