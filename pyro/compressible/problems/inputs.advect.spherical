[driver]
max_steps = 500
tmax = 1.0

init_tstep_factor = 1.0
fix_dt = 0.005


[compressible]
limiter = 0
cvisc = 0.1
riemann = CGF

[io]
basename = spherical_advect_


[eos]
gamma = 1.4


[mesh]
grid_type = SphericalPolar
nx = 64
ny = 64
xmin = 1.0
xmax = 2.0
ymin = 0.523
ymax = 2.617

xlboundary = periodic
xrboundary = periodic

ylboundary = periodic
yrboundary = periodic


[vis]
dovis = 1
